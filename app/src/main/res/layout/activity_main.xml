<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
       	android:id="@+id/container_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      	android:background="@color/celeste_oscuro_color"
      	android:padding="2dp"
        android:orientation="vertical"
        android:layout_gravity="start">

        <ImageView
            android:id="@+id/imageView_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pantalla_logo" />

        <TextView
            android:id="@+id/textView_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorites"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:drawableLeft="@drawable/ico_favorite_user_profile" />

        <CheckBox
            android:id="@+id/checkBox_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:button="@drawable/selector_check_box"
            android:text="@string/favorites_notification"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>

        <ListView
	        android:id="@+id/left_drawer"
	        android:layout_width="match_parent"
	        android:layout_height="425dp"
            android:background="@color/celeste_oscuro_color"
	        android:choiceMode="singleChoice" />


    </LinearLayout>

</android.support.v4.widget.DrawerLayout>